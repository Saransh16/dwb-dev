{{!
    @template course_course/coursecard

    This template renders the a card for the course cards.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10,
                "visible": true
            }
        ]
    }
}}
<style>
.course_cat {
  float: right;
  padding: 0px 5px;
  border-radius: 9px;
  background-color: #eef9f8;
  color: #60c7bb;}
.progress-bar{background-color:#4cc0b2;}
.course_short a {color:#333333;font-weight:bold;}
</style>
<div class="card dashboard-card" role="listitem"
    data-region="course-content"
    data-course-id="{{{id}}}">
 
    <div class="card-body pr-1 course-info-container" id="course-info-container-{{id}}-{{uniqid}}">
        <div class="d-flex align-items-start">
            <div class="w-100 course_short">
                {{#showshortname}}
                    <div class="text-muted muted d-flex mb-1 flex-wrap">
                        <span class="sr-only">
                            {{#str}}aria:courseshortname, core_course{{/str}}
                        </span>
                        <div>
                            {{{shortname}}}
                        </div>
                        {{$divider}}{{/divider}}
                    </div>
                {{/showshortname}}
                <a href="{{viewurl}}" class="aalink coursename mr-2 mb-1">
                    {{> core_course/favouriteicon }}
                    <span class="sr-only">
                            {{#str}}aria:coursename, core_course{{/str}}
                        </span>
                    {{$coursename}}{{/coursename}}
                </a><span class="course_cat">{{$coursecategory}}{{/coursecategory}}</span>
                {{^visible}}
                    <div class="d-flex flex-wrap">
                        <span class="badge badge-info">{{#str}} hiddenfromstudents {{/str}}</span>
                    </div>
                {{/visible}}
            </div>
        </div>
    </div>
    <div class="d-flex align-items-start">
        {{$progress}}{{/progress}}
        {{$menu}}{{/menu}}
    </div>
</div>
